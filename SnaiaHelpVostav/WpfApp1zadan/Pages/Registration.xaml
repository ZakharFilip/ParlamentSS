<Page x:Class="WpfApp1zadan.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1zadan.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid>
        <TextBox x:Name="txtAuthorName" HorizontalAlignment="Left" Margin="253,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199"/>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Left" Margin="253,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199" TextChanged="txtLogin_TextChanged"/>
        <TextBox x:Name="txtStaj" HorizontalAlignment="Left" Margin="366,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="86"/>
        <DatePicker x:Name="dateBirthDate" HorizontalAlignment="Left" Margin="253,225,0,0" VerticalAlignment="Top" Height="25"/>
        <TextBox x:Name="txtMail" HorizontalAlignment="Left" Margin="253,268,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199"/>
        <TextBox x:Name="txtPhone" HorizontalAlignment="Left" Margin="253,306,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199"/>
        <Label Content="Введите имя автора" HorizontalAlignment="Left" Margin="253,46,0,0" VerticalAlignment="Top"/>
        <Label Content="Введите логин" HorizontalAlignment="Left" Margin="253,90,0,0" VerticalAlignment="Top"/>
        <Label Content="Введите пароль" HorizontalAlignment="Left" Margin="253,129,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.082,-0.152"/>
        <Label Content="Введите пароль повторно" HorizontalAlignment="Left" Margin="253,168,0,0" VerticalAlignment="Top"/>
        <Label Content="Дата рождения" HorizontalAlignment="Left" Margin="253,205,0,0" VerticalAlignment="Top"/>
        <Label Content="Стаж" HorizontalAlignment="Left" Margin="366,205,0,0" VerticalAlignment="Top"/>
        <Label Content="Введиет почту" HorizontalAlignment="Left" Margin="253,242,0,0" VerticalAlignment="Top"/>
        <Label Content="Введите телефон" HorizontalAlignment="Left" Margin="253,286,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnCreate" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="253,329,0,0" VerticalAlignment="Top" Width="199" Height="32" Click="Button_Click" IsEnabled="False"/>
        <Label Content="Регистрация" HorizontalAlignment="Left" Margin="298,12,0,0" VerticalAlignment="Top" FontSize="18"/>
        <PasswordBox x:Name="psbPassword" HorizontalAlignment="Left" Margin="253,150,0,0" VerticalAlignment="Top" Width="199" PasswordChanged="psbPassword_PasswordChanged"/>
        <PasswordBox x:Name="psbPasswordPovtor" HorizontalAlignment="Left" Margin="253,194,0,0" VerticalAlignment="Top" Width="199" PasswordChanged="psbPasswordPovtor_PasswordChanged"/>
        <Button x:Name="btnBack" Content="Назад" HorizontalAlignment="Left" Margin="253,366,0,0" VerticalAlignment="Top" Height="32" Width="199" Click="btnBack_Click"/>

    </Grid>
</Page>
