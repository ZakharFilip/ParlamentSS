<Page x:Class="ParlamentSS.Pages.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ParlamentSS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Обзор Партии">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Обзор клуба"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="20,20,0,20"
                   HorizontalAlignment="Left"
                   Grid.Row="0"
                   Grid.Column="0"/>

        <!-- Поля ввода -->
        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="20,0,20,0">
            <!-- Название партии -->
            <TextBlock Text="Название:"
                       FontSize="14"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox"
                     Height="35"
                     FontSize="14"
                     Padding="5"
                     Margin="0,0,0,10"
                     MaxLength="100"
                     TextChanged="NameTextBox_TextChanged"
                     Text="_"/>

            <!-- Программа партии -->
            <TextBlock Text="Программа:"
                       FontSize="14"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="ProgramTextBox"
                     Height="100"
                     FontSize="14"
                     Padding="5"
                     Margin="0,0,0,10"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Text="_"/>

            <!-- Информация о партии -->
            <TextBlock Text="Дополнительная информация:"
                       FontSize="14"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="InfoTextBox"
                     Height="53"
                     FontSize="14"
                     Padding="5"
                     Margin="0,0,0,10"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Text="_"/>

            <!-- Дата основания -->
        </StackPanel>

        <!-- Логотип и предпросмотр -->
        <StackPanel Grid.Row="1"
                    Grid.Column="1"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="20,0,20,0">
            <TextBlock x:Name="textBlockLogo"
                       Text="Ссылка на логотип:"
                       FontSize="14"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="textBoxLogoLonk"
                     Height="35"
                     FontSize="14"
                     Padding="5"
                     Margin="0,0,0,10"
                     MaxLength="100"
                     Text="_"/>
            <TextBlock x:Name="textBlockLogogWatch"
                       Text="Предпросмотр лого:"
                       FontSize="14"
                       Margin="0,0,0,5"/>
            <Image x:Name="LogoImage"
                   Height="150"
                   Width="150"
                   Margin="0,0,0,10"
                   Stretch="Uniform"
                   Source="{Binding Text, ElementName=textBoxLogoLonk}"/>
        </StackPanel>

        <!-- Кнопки и сообщение об ошибке -->
        <StackPanel Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="20,20,20,20">
            <Button x:Name="buttonGoBack"
                    Content="Назад"
                    Background="#2A3F54"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="buttonGoBack_Click"
                    Height="35"
                    Width="100"
                    Margin="0,0,10,0"/>
            <Button x:Name="buttonEdit"
                    Content="Редактировать"
                    Background="#2A3F54"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="buttonEdit_Click"
                    Height="35"
                    Width="150"
                    Margin="10,0,0,0"/>
            <TextBlock x:Name="ErrorMessage"
                       Foreground="Red"
                       TextWrapping="Wrap"
                       Visibility="Collapsed"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>