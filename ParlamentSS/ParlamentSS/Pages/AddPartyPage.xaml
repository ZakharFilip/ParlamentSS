<Page x:Class="ParlamentSS.Pages.AddPartyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ParlamentSS.Pages"
      mc:Ignorable="d" 
       d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPartyPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Создание новой партии"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="40,20,0,20"
                   HorizontalAlignment="Left"
                   Grid.Row="0"/>

        <!-- Поля ввода -->
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Width="400"
                    Margin="40,0,0,0">
            <!-- Название партии -->
            <TextBlock Text="Название партии (обязательно):"
                       FontSize="14"
                       Margin="0,0,0,5"/>
            <TextBlock Text="Дата основания:"
                       FontSize="14"
                       Width="182" RenderTransformOrigin="0.504,0.587" Height="21"/>
            <TextBox x:Name="NameTextBox"
                     Height="35"
                     FontSize="14"
                     Padding="5"
                     Margin="0,0,0,10"
                     MaxLength="100"/>

            <!-- Программа партии -->
            <TextBlock Text="Программа партии:"
                       FontSize="14"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="ProgramTextBox"
                     Height="100"
                     FontSize="14"
                     Padding="5"
                     Margin="0,0,0,10"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>

            <!-- Информация о партии -->
            <TextBlock Text="Дополнительная информация:"
                       FontSize="14"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="InfoTextBox"
                     Height="100"
                     FontSize="14"
                     Padding="5"
                     Margin="0,0,0,10"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>



            <!-- Логотип -->
            <TextBlock Text="Логотип (PNG/JPEG):"
                       FontSize="14"
                       Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,10">
            </StackPanel>
        </StackPanel>

        <!-- Кнопка создания и сообщение об ошибке -->
        <StackPanel Grid.Row="2"
                    HorizontalAlignment="Left"
                    Margin="40,20,0,20">
            <TextBlock x:Name="ErrorMessage"
                       Foreground="Red"
                       TextWrapping="Wrap"
                       Visibility="Visible"/>
            <Button x:Name="CreatePartyButton"
                    Content="Создать партию"
                    Height="45"
                    Width="200"
                    Background="#2A3F54"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="CreatePartyButton_Click" RenderTransformOrigin="0.506,0.518"/>
        </StackPanel>
        <!-- Дата основания -->
        <DatePicker x:Name="FoundationDatePicker"
                         Margin="508,0,0,243" Grid.Row="1" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                        >
            <DatePicker.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </DatePicker.RenderTransform>
        </DatePicker>
        <TextBlock x:Name="textBlockLogo" Text="Ссылка на логотип"
            FontSize="14"
                       Margin="452,73,18,185" Grid.Row="1"/>
        <TextBox x:Name="textBoxLogoLonk"
            FontSize="14"
            Padding="5"
            MaxLength="100" Margin="452,118,18,139" Grid.Row="1"/>
    </Grid>
</Page>
