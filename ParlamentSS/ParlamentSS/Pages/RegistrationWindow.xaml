<Window x:Class="ParlamentSS.Pages.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParlamentSS.Pages"
        mc:Ignorable="d"
        Title="Регистрация - Парламентская система" 
        Height="550" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#2A3F54"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}" 
                                   TextDecorations="Underline"
                                   Foreground="{TemplateBinding Foreground}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#1E2A38"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Основной контейнер -->
        <Grid Background="#F5F5F5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая часть - изображение или лого -->
            <Border Grid.Column="0" Background="#2A3F54">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="\Sourses\Sprites\parliament-logo.png" 
                           Width="150" 
                           Height="150"
                           Margin="0 0 0 20"/>
                    <TextBlock Text="Парламентская система"
                               Foreground="White"
                               FontSize="22"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Правая часть - форма регистрации -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Center" 
                          HorizontalAlignment="Center"
                          Width="300"
                          Margin="0 20">

                    <TextBlock Text="Регистрация"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0 0 0 20"
                               HorizontalAlignment="Center"/>

                    <!-- Поля для ввода данных -->
                    <TextBox x:Name="FirstNameTextBox"
                            
                             Margin="0 0 0 10"
                             Height="35"
                             FontSize="14"
                             Padding="10"/>

                    <TextBox x:Name="LastNameTextBox"
                            
                             Margin="0 0 0 10"
                             Height="35"
                             FontSize="14"
                             Padding="10"/>

                    <TextBox x:Name="EmailTextBox"
                             
                             Margin="0 0 0 10"
                             Height="35"
                             FontSize="14"
                             Padding="10"/>

                    <TextBox x:Name="UsernameTextBox"
                             
                             Margin="0 0 0 10"
                             Height="35"
                             FontSize="14"
                             Padding="10"/>

                    <PasswordBox x:Name="PasswordBox"
                                
                                 Margin="0 0 0 10"
                                 Height="35"
                                 FontSize="14"
                                 Padding="10"/>

                    <PasswordBox x:Name="ConfirmPasswordBox"
                                 
                                 Margin="0 0 0 20"
                                 Height="35"
                                 FontSize="14"
                                 Padding="10"/>

                    <Button x:Name="RegisterButton"
                            Content="Зарегистрироваться"
                            Height="45"
                            Background="#2A3F54"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"/>

                    <!-- Ссылка для возврата к авторизации -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0 15 0 0">
                        <TextBlock Text="Уже есть аккаунт? "
                                   FontSize="14"/>
                        <Button x:Name="LoginLinkButton"
                                Content="Войти"
                                Style="{StaticResource LinkButtonStyle}"
                                FontSize="14"
                                Foreground="#2A3F54"
                                Cursor="Hand"
                                Click="LoginLinkButton_Click"/>
                    </StackPanel>

                    <TextBlock x:Name="ErrorMessage"
                               Foreground="Red"
                               Margin="0 15 0 0"
                               TextWrapping="Wrap"
                               Visibility="Collapsed"/>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
